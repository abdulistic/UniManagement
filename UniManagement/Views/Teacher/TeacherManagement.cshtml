@using Restaurant.ClassLibrary.ViewModel;

@model List<SubjectVM>


@{
    ViewBag.Title = "TeacherManagement";
    Layout = "~/Views/Shared/_TeacherShared.cshtml";
}
@section myLink{

    <link rel="stylesheet" type="text/css" href="~/Content/Admincss/datatables.min.css" />
    <link rel='stylesheet prefetch' href='~/css/twitter-boostrap-min.less'>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="~/Content/Admincss/DataTable.css" rel="stylesheet" />
    <script type="text/javascript" src="//code.jquery.com/jquery-1.10.2.min.js"></script>
}

<div style="margin:100px"
     class="row">
    <div id="admin" class="col s12">
        <div class="card material-table">
            <div class="table-header">
                <span class="table-title">Subjects Assigned</span>
                <div class="actions">
                    @*<a href="#addEmployeeModal" data-toggle="modal" class="modal-trigger waves-effect btn-flat nopadding"><i class="material-icons">person_add</i></a>*@
                    <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                </div>
            </div>
            <table id="datatable">
                <thead>
                    <tr>
                        <th>Subject Name</th>
                        <th>Class Assigned</th>
                        <th>Added On</th>
                        <th class="ten td_Action">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.SubjectName</td>
                            <td>@m.ClassName</td>
                            <td>@m.CreatedOn.ToString("dd MMM yyyy")</td>
                            <td class="td_Action">
                                <a href="/teacher/testmanagement/@m.SubjectId" data-id="@m.SubjectId"><i class="material-icons" data-toggle="tooltip" title="View Tests">&#xe417;</i></a>
                                @*<a href="/teacher/testmanagement/@m.SubjectId" data-id="@m.SubjectId" class="delete delItem" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="View Tests">&#xe417;</i></a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





