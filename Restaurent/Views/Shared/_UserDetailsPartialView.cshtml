@using Restaurent.Models
@model CustomerDetailsModel



<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="text-center">Customer Details</h2>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-3 col-lg-3 "> <img alt="User Pic" src="~/Images/Cafe/person.png" class="img-responsive"> </div>
                                    <div class=" col-md-9 col-lg-9 ">
                                        <table class="table table-user-information">
                                            <tbody>
                                                <tr>
                                                    <td><h4><b>Name:</b></h4></td>
                                                    <td><h4>@Model.UserName</h4></td>
                                                </tr>
                                                <tr>
                                                    <td><h4><b>Gender:</b></h4></td>
                                                    <td><h4>@Model.Gender</h4></td>
                                                </tr>
                                                <tr>
                                                    <td><h4><b>Contact:</b></h4></td>
                                                    <td><h4>@Model.Mobile</h4></td>
                                                </tr>
                                                <tr>
                                                    <td><h4><b>Country:</b></h4></td>
                                                    <td><h4>@Model.Country</h4></td>
                                                </tr>
                                                <tr>
                                                    <td><h4><b>City & State:</b></h4></td>
                                                    <td><h4>@Model.City, @Model.State</h4></td>
                                                </tr>
                                                <tr>
                                                <tr>
                                                    <td><h5><b>Street Address:</b></h5></td>
                                                    <td><h5>@Model.Address</h5></td>
                                                </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>