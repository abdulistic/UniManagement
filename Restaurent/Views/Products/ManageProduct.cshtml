@using Restaurent.Models
@model IEnumerable<FeaturedRecipesModel>
@{
    ViewBag.Title = "ManageProduct";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
@section myLink{
    @*<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>*@
    <link href="~/Content/Admincss/CloudeFlareAwesomeFont440StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/ManageStyleSheet.css" rel="stylesheet" />

    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

}


<div class="container-fluid" style="margin-top:100px">
    <div class="row">

        <button id="BtnModal" type="button" class="btn btn-primary hidden" data-toggle="modal" data-target="#exampleModalLong">
            Launch demo modal
        </button>

        <button id="delBtnModal" type="button" class="btn btn-primary hidden" data-toggle="modal" data-target=".bd-example-modal-sm">Small modal</button>


        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h2 class="panel-title">Food Items</h2>
                        </div>

                        <div class="col col-xs-6 text-right">
                            <a href="/Products/AddProduct" class="btn btn-sm btn-primary btn-create">Add New Item</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>

                                <th class="col-lg-1 hidden-xs">Image</th>
                                <th class="col-lg-5">Title</th>
                                <th class="col-lg-2 hidden-xs">Price</th>
                                <th class="col-lg-1 hidden-xs">Status</th>
                                <th class="col-lg-2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td class="col-lg-1 hidden-xs"><img src="@m.ImageUrl" alt="@m.Title" class="img-responsive dgicon" /></td>
                                    <td class="col-lg-5"><strong>@m.Title</strong></td>

                                    <td class="col-lg-2 hidden-xs">Rs.@string.Format("{0:N0}", m.Price)/-</td>
                                    <td class="col-lg-1 hidden-xs"><span style="padding:5px" class="@m.Status.CssClass">@m.Status.Name</span> </td>
                                    <td class="col-lg-2">
                                        @*<a href="/Products/Available/@m.Id" class="btn btn-primary btn-xs btn-details"><span class="glyphicon glyphicon-modal-window"></span></a>
                                            <a href="/Products/Unavailable/@m.Id" class="btn btn-danger btn-xs btn-details"><span class="glyphicon glyphicon-remove"></span></a>*@
                                        <a href="#" data-id="@m.Id" class="btn btn-success btn-xs btn-details editFoodItem"><span class="glyphicon glyphicon-edit"></span></a>
                                        <a href="#" data-id="@m.Id" class="btn btn-danger btn-xs btn-details delFoodItem"><span class="glyphicon glyphicon-trash"></span></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                @*<div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4">
                                Page 1 of 5
                            </div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                </ul>
                                <ul class="pagination visible-xs pull-right">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>*@
            </div>
        </div>
    </div>
</div>

<div id="delModal">

    <div class="modal  fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-body progress-bar-warning">

                    <h3 style="">Do you want to delete this item?</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <a href="#" class="btn btn-danger" id="delItemOkBtn">Ok</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="editModal">


</div>

@section myScript{
    <script src="~/Scripts/AdminJavascript/ManageProduct.js"></script>

}
