@using Restaurant.ClassLibrary.ViewModel;

@model TestMgtVM

@{
    ViewBag.Title = "SubjectTestResults";
    Layout = "~/Views/Shared/_StudentShared.cshtml";
}

@section myLink{

    <link rel="stylesheet" type="text/css" href="~/Content/Admincss/datatables.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="~/Content/Admincss/DataTable.css" rel="stylesheet" />
}

<div style="margin:100px"
     class="row">
    <div id="admin" class="col s12">
        <div class="card material-table">
            <div class="table-header">
                <span class="table-title">Test History</span>
                <div class="actions">
                    @*<a href="#addEmployeeModal" data-toggle="modal" class="modal-trigger waves-effect btn-flat nopadding"><i class="material-icons">person_add</i></a>*@
                    <a href="#" class="search-toggle waves-effect btn-flat nopadding"><i class="material-icons">search</i></a>
                </div>
            </div>
            <table id="datatable">
                <thead>
                    <tr>
                        <th>Test Name</th>
                        <th>Test Score</th>
                        <th>Test Marks</th>
                        <th>Held On</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.TestList != null)
                    {
                        foreach (var m in Model?.TestList)
                        {
                            <tr>
                                <td>@m.TestName</td>
                                <td>@m.TestScore </td>
                                <td>@m.TotalMarks </td>
                                <td>@m.CreatedOn.ToString("dd MMM yyyy") </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section myScript{

    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Scripts/AdminJavascript/dataTable.js" type="text/javascript"></script>
}

